{
    "name": "organetto",
    "displayName": "ORGanetto",
    "description": "",
    "version": "0.0.4",
    "repository": "https://github.com/fracarma/organetto",
    "engines": {
        "vscode": "^1.99.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "organetto.openNewTab",
                "title": "ORGanetto: Show my Salesforce Orgs"
            },
            {
                "command": "organetto.addOrg",
                "title": "ORGanetto: Add Salesforce Org"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && node -e \"const fs=require('fs');const path=require('path');const src='src/webview';const dst='out/webview';if(!fs.existsSync(dst))fs.mkdirSync(dst,{recursive:true});fs.readdirSync(src).forEach(f=>{if(fs.statSync(path.join(src,f)).isFile())fs.copyFileSync(path.join(src,f),path.join(dst,f))});console.log('Webview assets copied to out/')\"",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
        "test": "vscode-test",
        "check-types": "tsc --noEmit",
        "package": "npm run check-types && node esbuild.js --production && vsce package"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.99.0",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^3.6.2",
        "esbuild": "^0.25.11",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3"
    }
}
